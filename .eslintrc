{
  "rules": {
    "vars-on-top": 0,
    "no-undef": 1,
    "no-unused-vars": 0,
    "no-mixed-spaces-and-tabs": 0,
    "no-console": 0,

//    "indent": [
//      2,
//      "tab"
//    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jquery": true,
    "mocha": false,
    "jasmine": false
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    // env = es6 doesn't include modules
    "modules": true,
    "jsx": true,
    "experimentalObjectRestSpread": true
  },
  "plugins": [
//    "react"
  ],
  "globals": {
//    "React": true,
//    "ReactDOM": true
  }
}